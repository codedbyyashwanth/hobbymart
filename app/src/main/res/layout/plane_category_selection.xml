<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/light"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/darkest"
            app:cardCornerRadius="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/close" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Select the Products"
            android:textColor="@color/darkest"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/motor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="Brushless Motor"
            android:textColor="@color/darkest"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/brushless_motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/motor_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021001"
                android:text="920KV Brushless DC Motor" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021002"
                android:text="1400KV BLDC Brushless Motor" />

        </RadioGroup>

        <TextView
            android:id="@+id/battery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brushless_motor"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="Battery"
            android:textColor="@color/darkest"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/battery_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021008"
                android:text="2200mAh Lipo Battery, 11.1 V" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021009"
                android:text="5200mAh Lithium Polymer battery Pack (Lipo)" />

        </RadioGroup>

        <TextView
            android:id="@+id/transmitter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/battery"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="Transmitter"
            android:textColor="@color/darkest"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/transmitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/transmitter_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021010"
                android:text="Fly Sky FS-i6 6-channel 2.4 Ghz Transmitter and FS-IA6 Receiver" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="21012021011"
                android:text="Fly Sky FS-CT6B 6-channel 2.4 Ghz Transmitter and Receiver" />

        </RadioGroup>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/transmitter"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Done"
            android:textAllCaps="false" />

    </RelativeLayout>


</ScrollView>